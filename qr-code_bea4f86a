    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const revealButton = document.getElementById('reveal-button');
            const revealedSection = document.getElementById('revealed-image-section');

            // Fonction de gestion du clic
            revealButton.addEventListener('click', () => {
                // Si la section est cachée, on l'affiche
                if (revealedSection.classList.contains('hidden')) {
                    revealedSection.classList.remove('hidden');
                    // On change le texte du bouton une fois l'image révélée
                    revealButton.textContent = "Indice Révélé";
                    revealButton.disabled = true; // Désactiver après le premier clic
                    // Défilement doux vers la nouvelle section révélée
                    revealedSection.scrollIntoView({ behavior: 'smooth', block: 'start' });
                }
            });
        });
    </script>

